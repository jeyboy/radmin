.form-inline
  .input-group
    = form.send field.view_helper, field.name, field.html_attributes.reverse_merge({value: field.form_value, class: 'form-control', data: {datetimepicker: true, options: field.datepicker_options.to_json}})

    .input-group-append
      .input-group-text
        = fa_icon('calendar', type: :solid)
