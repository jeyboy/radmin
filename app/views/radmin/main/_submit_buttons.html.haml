.form-actions
  %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}

  %button.btn-success{type: "submit", name: "_save", :'data-disable-with' => t("admin.form.save")}
    = fa_icon('check', type: :solid)
    %i.icon-white.icon-ok
    = t("admin.form.save")

  - if authorized? :new, current_model
    %button.btn-info{type: "submit", name: "_add_another", :'data-disable-with' => t("admin.form.save_and_add_another")}
      = fa_icon('check-double', type: :solid)
      = t("admin.form.save_and_add_another")

  - if authorized? :edit, current_model
    %button.btn-info{type: "submit", name: "_add_edit", :'data-disable-with' => t("admin.form.save_and_edit")}
      = fa_icon('edit', type: :solid)
      = t("admin.form.save_and_edit")

  %button.btn-warning{type: "submit", name: "_continue", :'data-disable-with' => t("admin.form.cancel"), formnovalidate: true}
    = fa_icon('ban', type: :solid)
    = t("admin.form.cancel")
